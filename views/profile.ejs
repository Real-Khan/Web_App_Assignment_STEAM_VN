<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
</head>

<body>
    <%- include('partials/navbar') %>

        <h1>User Profile</h1>
        <section>
            <h2>
                <%= user.name %>
            </h2>
            <p>Email: <%= user.email %>
            </p>
            <p>Username: <%= user.username %>
            </p>
            <p>Phone: <%= user.phone %>
            </p>
            <p>Website: <%= user.website %>
            </p>
            <p>Address: <%= user.address.street %>, <%= user.address.suite %>, <%= user.address.city %>, <%=
                                user.address.zipcode %>
            </p>
        </section>
        <section>
            <h2>Posts</h2>
            <div id="posts">
                <% posts.forEach(post=> { %>
                    <div class="post">
                        <h3>
                            <%= post.title %>
                        </h3>
                        <p>
                            <%= post.body %>
                        </p>
                        <div class="comments">
                            <% post.comments.forEach(comment=> { %>
                                <div class="comment">
                                    <p><strong>
                                            <%= comment.name %>
                                        </strong> (<%= comment.email %>)</p>
                                    <p>
                                        <%= comment.body %>
                                    </p>
                                </div>
                                <% }); %>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </section>
        <section>
            <h2>Photo Albums</h2>
            <div id="albums">
                <% albums.forEach(album=> { %>
                    <div class="album">
                        <h3>
                            <%= album.title %>
                        </h3>
                        <!-- Add a link to the album photos page or display the photos here -->
                    </div>
                    <% }); %>
            </div>
        </section>
</body>

</html>